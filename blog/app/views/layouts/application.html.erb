        <li class="col-md">
          <h1 class="no-margin">Blog Facilito</h1>
        </li>
        <li class="col-md">
          <%= link_to "Inicio" , root_path %>
        </li>
        <li class="col-md">
          Diseño
        </li>
        <li class="col-md">
          Programación
        </li>
        <li class="col-md">
          Tecnología
        </li>
      </ul>
